yaz("\n--- BOLUM 1: Temel Fonksiyonlar ---")

// Turkce fonksiyon tanimlama
fonksiyon selamla(isim: metin) yap
    yaz("   Merhaba, ", isim, "!")
son

// English function definition
function greet(name: string) do
    yaz("   Hello, ", name, "!")
end

yaz("\n[TR] Turkce fonksiyon:")
