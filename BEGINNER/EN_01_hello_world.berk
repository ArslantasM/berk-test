print("[EN] Hello World!")

// ─────────────────────────────────────────────────────────────────────────────
// SECTION 2: Variables
// ─────────────────────────────────────────────────────────────────────────────

print("\n Variables:")

// Turkish variables
let name_tr = "Ahmet"
let age_tr = 25
let height_tr = 1.78

// English variables
let name_en = "John"
let age_en = 30
let height_en = 1.85

print("   [TR] Name: ", name_tr, ", Age: ", age_tr, ", Height: ", height_tr, "m")
print("   [EN] Name: ", name_en, ", Age: ", age_en, ", Height: ", height_en, "m")

// ─────────────────────────────────────────────────────────────────────────────
// SECTION 3: Data Types
// ─────────────────────────────────────────────────────────────────────────────

print("\n Data Types:")

let integer_val = 42
let decimal_val = 3.14159
let text_val = "BERK is awesome!"
let boolean_val = true
let array_val = [1, 2, 3, 4, 5]

print("   Integer:  ", integer_val)
print("   Decimal:  ", decimal_val)
print("   String:   ", text_val)
print("   Boolean:  ", boolean_val)
print("   Array:    ", array_val)

// ─────────────────────────────────────────────────────────────────────────────
// SECTION 4: Math Operations
// ─────────────────────────────────────────────────────────────────────────────

print("\n Math Operations:")

let a = 15
let b = 4

print("   a = ", a, ", b = ", b)
print("   a + b = ", a + b)
print("   a - b = ", a - b)
print("   a * b = ", a * b)
print("   a / b = ", a / b)

let remainder = a % b
print("   a % b = ", remainder, " (modulo)")

