// Quick Sort - English implementation
function quick_sort_en(arr: &mut [integer], low: integer, high: integer) do
    if low < high
        variable pivot_index = partition(arr, low, high)
        quick_sort_en(arr, low, pivot_index - 1)
        quick_sort_en(arr, pivot_index + 1, high)
    end
end

function partition(arr: &mut [integer], low: integer, high: integer) -> integer do
    variable pivot = arr[high]
    variable i = low - 1
    
    for j in low..high do
        if arr[j] < pivot
            i += 1
            // Swap
            variable temp = arr[i]
            arr[i] = arr[j]
            arr[j] = temp
        end
    end
    
    // Swap pivot
    variable temp = arr[i + 1]
    arr[i + 1] = arr[high]
    arr[high] = temp
    
    return i + 1
end

