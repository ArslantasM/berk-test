// Selection Sort - English
function selection_sort_en(arr: &mut [integer]) do
    variable n = arr.len()
    
    for i in 0..n do
        variable min_index = i
        
        for j in (i + 1)..n do
            if arr[j] < arr[min_index]
                min_index = j
            end
        end
        
        // Swap
        variable temp = arr[i]
        arr[i] = arr[min_index]
        arr[min_index] = temp
    end
end

