// ─────────────────────────────────────────────────────────────────────────────
// BOLUM 6: Sayac ve Akumulator
// ─────────────────────────────────────────────────────────────────────────────

yaz("\n--- BOLUM 6: Sayac ve Akumulator ---")

// Kare toplami hesapla
fonksiyon kare_toplami(n: tamsayı) -> tamsayı yap
    değişken toplam = 0
    için i içinde 1..=n yap
        toplam = toplam + (i * i)
    son
    dön toplam
son

// Faktoryel hesapla
fonksiyon faktoriyel(n: tamsayı) -> tamsayı yap
    değişken sonuc = 1
    için i içinde 1..=n yap
        sonuc = sonuc * i
    son
    dön sonuc
son

yaz("\n   Kare toplami (1^2 + 2^2 + ... + 5^2):")
yaz("   kare_toplami(5) = ", kare_toplami(5))

yaz("\n   Faktoriyel hesaplama:")
için i içinde 1..8 yap
    yaz("   ", i, "! = ", faktoriyel(i))
son

