// ─────────────────────────────────────────────────────────────────────────────
// BOLUM 1: Dizilerle Calisma
// ─────────────────────────────────────────────────────────────────────────────

yaz("\n--- BOLUM 1: Dizilerle Calisma ---")

değişken sayilar = [64, 34, 25, 12, 22, 11, 90]
yaz("\n   Orijinal dizi: ", sayilar)
yaz("   Eleman sayisi: ", sayilar.len())
yaz("   Ilk eleman: ", sayilar.first())
yaz("   Son eleman: ", sayilar.last())
yaz("   Toplam: ", sayilar.sum())

// ─────────────────────────────────────────────────────────────────────────────
// BOLUM 2: Ortalama Hesaplama
// ─────────────────────────────────────────────────────────────────────────────

yaz("\n--- BOLUM 2: Ortalama Hesaplama ---")

değişken notlar = [85, 92, 78, 96, 88, 73, 95]
yaz("\n   Notlar: ", notlar)

değişken toplam = notlar.sum()
değişken adet = notlar.len()
değişken ortalama = toplam / adet

yaz("   Toplam: ", toplam)
yaz("   Adet: ", adet)
yaz("   Ortalama: ", ortalama)

// ─────────────────────────────────────────────────────────────────────────────
// BOLUM 3: Metin Dizileri
// ─────────────────────────────────────────────────────────────────────────────

yaz("\n--- BOLUM 3: Metin Dizileri ---")

değişken isimler = ["Ali", "Ayse", "Mehmet", "Fatma", "Ahmet"]
yaz("\n   Isimler: ", isimler)
yaz("   Eleman sayisi: ", isimler.len())

yaz("\n   Isim listesi:")
için isim in isimler yap
