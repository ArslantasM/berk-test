// ─────────────────────────────────────────────────────────────────────────────
// BOLUM 6: Log Seviyeleri
// ─────────────────────────────────────────────────────────────────────────────

yaz("\n--- BOLUM 6: Log Seviyeleri ---")

fonksiyon log_info(mesaj: metin) yap
    yaz("   [INFO] ", mesaj)
son

fonksiyon log_warn(mesaj: metin) yap
    yaz("   [WARN] ", mesaj)
son

fonksiyon log_error(mesaj: metin) yap
    yaz("   [ERROR] ", mesaj)
son

fonksiyon log_debug(mesaj: metin) yap
    yaz("   [DEBUG] ", mesaj)
son

log_info("Uygulama baslatildi")
log_debug("Konfigürasyon yukleniyor...")
log_warn("Eski API kullaniliyor")
log_error("Baglanti hatasi!")
log_info("Uygulama sonlandirildi")

// ─────────────────────────────────────────────────────────────────────────────
// BOLUM 7: Ilerleme Gosterimi
// ─────────────────────────────────────────────────────────────────────────────

yaz("\n--- BOLUM 7: Ilerleme Gosterimi ---")

fonksiyon ilerleme_ciz(yuzde: tamsayı) yap
    değişken dolu = yuzde / 10
    değişken bos = 10 - dolu
    
    eğer yuzde == 25 ise
        yaz("   [##........] %25")
    son
    eğer yuzde == 50 ise
        yaz("   [#####.....] %50")
    son
    eğer yuzde == 75 ise
        yaz("   [#######...] %75")
    son
    eğer yuzde == 100 ise
        yaz("   [##########] %100 Tamamlandi!")
    son
son

ilerleme_ciz(25)
ilerleme_ciz(50)
ilerleme_ciz(75)
ilerleme_ciz(100)

yaz("\n[OK] IO kutuphane demosu tamamlandi!")
